# ========================================
# EMAIL CONFIGURATION (SMTP)
# ========================================
# REQUIRED for password reset and tenant registration

# Option 1: Gmail (for testing/small scale)
# Steps: https://myaccount.google.com/apppasswords
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password

# Option 2: SendGrid (recommended for production)
# Sign up: https://sendgrid.com (free tier: 100 emails/day)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=

# Option 3: AWS SES (cost-effective for high volume)
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-aws-access-key-id
# SMTP_PASS=your-aws-secret-access-key

# ========================================
# EXTERNAL SERVICES
# ========================================
# Google Maps API key (for address autocomplete)
GOOGLE_MAPS_API_KEY=

# ========================================
# ERROR MONITORING & LOGGING
# ========================================
# Sentry DSN for error tracking (get from https://sentry.io)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Log level: error, warn, info (don't use debug in production)
LOG_LEVEL=info

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# ========================================
# SYSTEM CONFIGURATION
# ========================================
SYSTEM_TIMEZONE=Europe/London
